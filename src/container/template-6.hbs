<header class="header">
    <a href="#test">
        {{> logo}}
    </a>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>
<main class="main">
    {{#with info}}
    <div class="info">

        <h1 class="info_title">{{title}}</h1>
        <p class="info_text">{{description}}</p>

    </div>
    {{/with}}
    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" class="form_input" placeholder="{{placeholder}}" name="{{name}}"
                id="form-input-{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">

            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <div class="form_line"></div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}

</main>
{{#with updates}}
<div class="updates">
    <h1 class="updates_title">{{title}}</h1>
    {{#each list}}
    <div class="upd">
        <div class="upd_image"></div>
        <div class="upd_block">
            <strong class="upd_name">{{nickname}}</strong>
            <p class="upd_text">{{description}}</p>
        </div>
    </div>
    {{/each}}
    <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>

</div>
{{/with}}

{{#with expirience}}
<div class="expirience">
    <h1 class="expirience_title">{{title}}</h1>
    <div class="card">
        {{#each list}}
        <div class="expirience_block">

            <strong class="expirience_name">{{name}}</strong>
            <p class="expirience_details">{{details}}</p>

        </div>
        {{/each}}
    </div>
    <div class="expirience_badge">{{badge}}</div>
</div>
{{/with}}


<footer class="footer" id="test">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title"> {{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}

</footer>