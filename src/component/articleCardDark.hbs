<div class="card_block">
    {{#each articles}}
    <div class="card">
        <div class="card_position">
            <div class="card_image" style="background-image: url({{photo}})"></div>
            {{#if isNew}}<div class="card_badge">NEW</div>{{/if}}
        </div>
        <h2 class="card_title">{{name}}</h2>
        <p class="card_text">{{description}}</p>
        <a href="#" class="button card_button">Read All</a>
    </div>
    {{/each}}
</div>